{
  "name": "lewisham-donation-hub-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:accessibility": "vitest run --reporter=verbose accessibility",
    "test:performance": "vitest run --reporter=verbose performance",
    "benchmark": "vitest bench",
    "analyze": "npm run build && npx @next/bundle-analyzer",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "perf:audit": "npm run lighthouse && npm run test:performance",
    "pwa:build": "npm run build && npm run pwa:generate-sw",
    "pwa:generate-sw": "workbox generateSW workbox-config.js",
    "pwa:install": "node scripts/install-pwa.js",
    "security:audit": "npm audit && npm run security:check-deps",
    "security:check-deps": "node scripts/check-security.js",
    "bundle:analyze": "npm run build && npm run bundle:report",
    "bundle:report": "node scripts/bundle-analyzer.js"
  },
