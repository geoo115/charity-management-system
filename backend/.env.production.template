# PRODUCTION ENVIRONMENT CONFIGURATION
# Copy this to your production server and update with real values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=8080
APP_ENV=production
LOG_LEVEL=info

# =============================================================================
# DATABASE CONFIGURATION (Production)
# =============================================================================
DB_HOST=your-postgres-host
DB_PORT=5432
DB_USER=lewisham_charity_user
DB_PASSWORD=your-secure-database-password
DB_NAME=lewisham_charity_production
DB_CLEAN_START=false

# =============================================================================
# REDIS CONFIGURATION (Production)
# =============================================================================
REDIS_ADDR=your-redis-host:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# =============================================================================
# JWT CONFIGURATION (Production - CHANGE THESE!)
# =============================================================================
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters-long

# =============================================================================
# EMAIL CONFIGURATION (SendGrid - PRIMARY)
# =============================================================================
# 1. Create SendGrid account at https://sendgrid.com
# 2. Verify your sender identity (email or domain)
# 3. Create API key with "Mail Send" permissions
# 4. Replace the values below with your real SendGrid credentials
SENDGRID_API_KEY=SG.your-real-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@lewisham-charity.org
SENDGRID_FROM_NAME=Lewisham Charity

# =============================================================================
# SMS CONFIGURATION (Twilio - SECONDARY)
# =============================================================================
# 1. Create Twilio account at https://twilio.com
# 2. Get your Account SID and Auth Token from the console
# 3. Purchase a phone number for sending SMS
# 4. Replace the values below with your real Twilio credentials
TWILIO_ACCOUNT_SID=your-real-twilio-account-sid
TWILIO_AUTH_TOKEN=your-real-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
FROM_EMAIL=noreply@lewisham-charity.org
FROM_NAME=Lewisham Charity
FRONTEND_URL=https://yourdomain.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
ENABLE_SWAGGER=false
DEBUG=false

# =============================================================================
# ADMIN USER (Will be created on first startup)
# =============================================================================
ADMIN_NAME=Admin User
ADMIN_EMAIL=admin@lewisham-charity.org
ADMIN_PASSWORD=change-this-secure-password-123

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
DEFAULT_USER_STATUS=active
DEFAULT_USER_ROLE=Visitor

